<?xml version="1.0"?>
<!DOCTYPE macker PUBLIC "-//innig//DTD Macker 0.4//EN" "http://innig.net/macker/dtd/macker-0.4.dtd">
<macker>
  <ruleset name="Api layer cannot reference persistence layer.">
    <access-rule>
      <deny>
        <from class="**.api.**"/>
        <to class="**.persistence.**"/>
      </deny>
    </access-rule>
  </ruleset>
</macker>