<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>br.org.j2ee-ref</groupId>
	<artifactId>arquitetura</artifactId>
	<packaging>jar</packaging>
	<version>0.0.2-SNAPSHOT</version>

	<parent>
		<groupId>br.org</groupId>
		<artifactId>j2ee-ref</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>

	<build>
		<plugins>
			<plugin>
				<groupId>de.andrena.tools.macker</groupId>
				<artifactId>macker-maven-plugin</artifactId>
				<version>1.0.2</version>
				<configuration>
					<rule>${project.basedir}/macker-rules.xml</rule>
<!-- 					<outputDirectory>${project.build.directory}/macker</outputDirectory> -->
    			        <outputName>macker-out.xml</outputName>
					<failOnError>true</failOnError>
					<verbose>true</verbose>
				</configuration>
				<executions>
					<execution>
						<phase>compile</phase>
						<goals>
							<goal>macker</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>findbugs-maven-plugin</artifactId>
				<version>${maven-findbugs.version}</version>
				<configuration>
					<excludeFilterFile>${project.basedir}/findbugs-exclude.xml</excludeFilterFile>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-pmd-plugin</artifactId>
				<version>${maven-pmd.version}</version>
				<configuration>
					<excludeFromFailureFile>${project.basedir}/exclude-pmd.properties</excludeFromFailureFile>
				</configuration>
			</plugin>
		</plugins>
		<finalName>arquitetura</finalName>
	</build>
</project>
